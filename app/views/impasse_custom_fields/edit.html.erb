<h2>
  <%= link_to l(:label_custom_field_plural), :controller => 'impasse_custom_fields', :action => 'index' %>
  &#187; <%= link_to l(@custom_field.type_name), :controller => 'impasse_custom_fields', :action => 'index', :tab => @custom_field.class.name %>
  &#187; <%= h @custom_field.name %>
</h2>

<%= labelled_form_for @custom_field, :as => :custom_field, :url => { :action => :edit, :id => @custom_field }  do |f| %>
  <%= render :partial => "custom_fields/form", :locals => {:f => f} %>
  <%= hidden_field_tag 'type', @custom_field.type %>
  <%= submit_tag l(:button_save) %>
<% end %>
